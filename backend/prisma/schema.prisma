generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  fullName  String
  tags      Genre?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("users")
}

model Movie {
  id          String       @id @default(uuid(4))
  title       String
  description String
  rate        Int
  isFavorite  Boolean      @default(false) @map("is_favorite")
  genre       Genre?
  date        DateTime?
  publishDate DateTime?    @map("publish_date")
  favoriteId  Int?         @map("favorite_id")
  posterId    String?      @unique @map("poster_id")
  createdAt   DateTime     @default(now()) @map("created_at")
  updatedAt   DateTime     @updatedAt @map("updated_at")
  poster      MoviePoster? @relation("movie_poster", fields: [posterId], references: [id])
  reviews     Review[]     @relation("movie_reviews")
  actors      Actor[]      @relation("movie_actors")

  @@index([publishDate, title])
  @@map("movies")
}

model MoviePoster {
  id        String   @id @default(uuid(4))
  url       String   @default("")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  movie     Movie?   @relation("movie_poster")

  @@map("movie_posters")
}

model Review {
  id        String   @id @default(uuid(4))
  text      String
  rate      Int      @default(0)
  movieId   String   @map("movie_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  movie     Movie    @relation("movie_reviews", fields: [movieId], references: [id], onDelete: Cascade, onUpdate: NoAction)

  @@map("reviews")
}

model Actor {
  id        String   @id @default(uuid(4))
  name      String
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  movies    Movie[]  @relation("movie_actors")

  @@map("actors")
}

enum Genre {
  ACTION
  DRAMA
  COMEDY
  DETECTIVE
  FAMILY
  FANTASY
  HORROR
  MUSICAL
  ROMANCE
  THRILLER
  WAR
  WESTERN
  DOCUMENTARY
  Sci_fi      @map("Sci-fi")

  @@map("enum_genre")
}
